{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HTML5 <img> Element Attributes",
  "$id": "html.img",
  "type": "object",
  "allOf": [
    { "$ref": "base.html" },
    {
      "type": "object",
      "properties": {
        "src": {
          "type": "string",
          "title": "Caminho da Imagem"
        },
        "alt": {
          "type": "string",
          "title": "Texto Alternativo"
        },
        "width": {
          "type": "integer",
          "title": "Largura"
        },
        "height": {
          "type": "integer",
          "title": "Altura"
        },
        "loading": {
          "type": "string",
          "title": "Modo de Carregamento",
          "enum": ["auto", "eager", "lazy"]
        }
      }
    }
  ]
}
